                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fmdsp"
                    android:text="GT:"
                    android:textSize="18sp"
                    android:textColor="#AAAA99"/>
